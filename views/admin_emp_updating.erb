<%users.each_with_index do |user, index|%>
Employee info of <%=user[1].capitalize%> <%=user[2].capitalize%>:<br><br>
<form method = "post" action = "emp_updated">
<table>
<tr>
<th>Employee ID</th>
<th>First Name</th>
<th>Last Name</th>
<th>Date Of Hire</th>
<th>Business Email</th>
<th>Admin?</th>
<th>PTO</th>
</tr>
<tr>
<%user.each do |item|%>
    <td><%=item%></td> 
<%end%>
</tr>
<tr>
<%user.each do |item|%>
<td><input type = "text" name = info[] value = "<%=item%>"></td>
<%end%>
</tr>
</table><br>
<%end%>
<input type = "submit" value = "Update">
</form><br>

<%users.each_with_index do |user, index|%>
Pay Period of <%=user[1].capitalize%> <%=user[2].capitalize%>: <%=pay_period[0]%> to <%=pay_period[1]%>
<table>
<th>Time in</th>
<th>Lunch Start</th>
<th>Lunch End</th>
<th>Time out</th>
<th>Date</th>
<tr>
<%time_table[index].each do |item|%>
<%item.each do |time|%>
<td><%if time.length == 5%>
    <%=time_converter(time)%>
    <%else%>
    <%=time%>
    <%end%>
</td>
<%end%>
</tr>
<%end%>
</table>
<h2>Select a date to update time mistakes</h2>
<form method = "post" action="update_timesheet">
    <input type="hidden" name="selected_id" value="<%=user[0]%>">
    <input type="date" name="time_fix">
    <input type="submit" value="Search">
</form><br>
<%end%>
<form method = "post" action = "to_admin_emplist">
<input type="submit" value="Return">
</form>